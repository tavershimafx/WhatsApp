<UserControl x:Class="WhatsApp.Desktop.ChatOptionsMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WhatsApp.Desktop"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="200">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Button Content="Contact info" Style="{StaticResource PopupMenuTextButton}"/>
            <Button Content="Report business" Style="{StaticResource PopupMenuTextButton}"/>
            <Button Content="Block" Style="{StaticResource PopupMenuTextButton}"/>
            <Button Content="Select messages" Style="{StaticResource PopupMenuTextButton}"/>
            <Button Content="Close chat" Style="{StaticResource PopupMenuTextButton}"/>
            <Button Content="Mute notifications" Style="{StaticResource PopupMenuTextButton}"/>
            <Button Content="Disappearing messages" Style="{StaticResource PopupMenuTextButton}"/>
            <Button Content="Clear messages" Style="{StaticResource PopupMenuTextButton}"/>
            <Button Content="Delete chat" Style="{StaticResource PopupMenuTextButton}"/>
        </StackPanel>
    </Grid>
</UserControl>
