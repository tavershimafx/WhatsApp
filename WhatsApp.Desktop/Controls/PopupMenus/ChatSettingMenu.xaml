<UserControl x:Class="WhatsApp.Desktop.ChatSettingMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WhatsApp.Desktop"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Button Content="New group" Style="{StaticResource PopupMenuTextButton}"/>
            <Button Content="Starred Messages" Style="{StaticResource PopupMenuTextButton}"/>
            <Button Content="Settings" Style="{StaticResource PopupMenuTextButton}"/>
            <Button Content="Log out" Style="{StaticResource PopupMenuTextButton}"/>
        </StackPanel>
    </Grid>
</UserControl>
